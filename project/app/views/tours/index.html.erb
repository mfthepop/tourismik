<h1>Listing tours</h1>

<table>
  <thead>
    <tr>
      <th>Tour</th>
      <th>Departure</th>
      <th>Qourum</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.tour_id %></td>
        <td><%= tour.departure %></td>
        <td><%= tour.qourum %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

