<h1>Listing tours</h1>

<table>
  <thead>
    <tr>
      <th>Departure date</th>
      <th>Departure time</th>
      <th>Departure location</th>
      <th>Quorum</th>
      <th>Registered</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tours.each do |tour| %>
      <tr>
        <td><%= tour.departure_date %></td>
        <td><%= tour.departure_time %></td>
        <td><%= tour.departure_location %></td>
        <td><%= tour.quorum %></td>
        <td><%= tour.registered %></td>
        <td><%= link_to 'Show', tour %></td>
        <td><%= link_to 'Edit', edit_tour_path(tour) %></td>
        <td><%= link_to 'Destroy', tour, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tour', new_tour_path, class: 'button success' %>
